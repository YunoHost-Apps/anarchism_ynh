{
    "name": "Anarchism",
    "id": "anarchism",
    "description": {
        "en": "An exhaustive exploration of Anarchist theory and practice.",
        "fr": "Exploration exhaustive de la th√©orie et de la pratique anarchiste."
    },
    "licence": "GPL-2",
    "developer": {
        "name": "opi",
        "email": "opi@zeropi.net",
        "url": "http://zeropi.net"
    },
    "multi_instance": "false",
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "ask": {
                    "en": "Choose a domain for anarchism"
